<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_admision_familiar" model="ir.actions.act_window">
    <field name="name">Familiar encargado del paciente</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.familiar</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para añadir un Familiar encargado del paciente admitido en UCI
          </p>
    </field>
  </record>

  <!-- Form view -->
  <record id="admision_familiar_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">admision.familiar</field>
    <field name="arch" type="xml">
      <form string="Idea form">
        <sheet>
         <field name="parentesco" placeholder="Parentesco familiar con el paciente" help="Parentesco con el paciente"></field>
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="admision_historia_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">admision.familiar</field>
    <field name="arch" type="xml">
      <tree limit="10">
          <field name="parentesco"></field>
      </tree>
    </field>
  </record>
  
  
   <!-- Menú -->
  <menuitem name="Familiar encargado" id="familiar_menu" parent="menu_config" action="action_admision_familiar"></menuitem>
  
</odoo>
