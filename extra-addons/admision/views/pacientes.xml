<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_admision_pacientes" model="ir.actions.act_window">
    <field name="name">Lista de pacientes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.paciente</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para añadir los datos del nuevo Paciente en la UCI
          </p>
    </field>
  </record>

  <!-- Form view -->
  <record id="admision_pacientes_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">admision.paciente</field>
    <field name="arch" type="xml">
      <form string="Idea form">
        <sheet>
         <group string="Número de la Historia Clínica">
           <field name="historia_id" placeholder="N° de Historia Clínica"></field>
         </group>
        
         <group string="Datos personales del paciente">
          <group>
            <field name="fecha_nacimiento" help="Fecha de nacimiento del paciente" placeholder="Fecha de nacimiento"></field>
            <field name="edad"></field>
            <field name="nombre" help="Nombre completo del paciente" placeholder="Nombre completo del paciente"></field>
            <field name="ci" help="Cédula de identidad" placeholder="Cédula de identidad"></field>
            <field name="peso_corporal"></field>
            <field name="sexo" help="Sexo del paciente" placeholder="Sexo" widget="radio"></field>
            <field name="color_piel" help="Color de piel del paciente" placeholder="Color de piel del paciente" widget="radio"></field>
          </group>
          <group>
            <field name="lugar_nacimiento" help="Lugar de nacimiento" placeholder="Lugar de nacimiento"></field>

            <field name="pais_id" help="País de origen" placeholder="País de origen del paciente"></field>
            <field name="estado_id" help="Estado" placeholder="Estado"></field>
            <field name="ciudad"></field>
            <field name="direccion1"></field>
            <field name="direccion2"></field>
            <field name="familiar_id" placeholder="Familiar encargado del paciente" widget="many2many_tags"></field>
          </group>
           

           
         </group>


         <group string="Información previa del Hospital">
            <group>
              <field name="fecha_ingreso_hospital" placeholder="Fecha de ingreso al HUAPA"></field>
            </group>
            <group>
              <field name="diagnostico_id" placeholder="Diagnóstico de Ingreso al HUAPA"></field>
              <field name="examen_id" placeholder="Examen físico de ingreso al HUAPA"></field>
            </group>
         </group>
        
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="admision_pacientes_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">admision.paciente</field>
    <field name="arch" type="xml">
      <tree limit="10">
         <field name="historia_id"></field>
         <field name="fecha_ingreso_hospital"></field>
         <field name="ci"></field>
         <field name="nombre"></field> 
      </tree>
    </field>
  </record>
</odoo>
