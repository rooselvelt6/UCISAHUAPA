<?xml version="1.0" encoding="utf-8"?>

<!-- CADA ID ES UNICO Y SIEMPRE EN MINUSCULA-->
<odoo>

  <record id="accion_admision" model="ir.actions.act_window">
    <field name="name">Control de admisión</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.admision</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form,graph</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para añadir un nuevo paciente a la UCI del SAHUAPA
          </p>
    </field>
  </record>

  <!-- Form view -->
  <record id="admision_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <form string="Idea form">
        <sheet>
          <group colspan="4">
            <group>
              <field name="foto" widget="image" class="oe_avatar"></field>
            </group>
            <group>
              <field name="fecha_ingreso_uci" string="Fecha de ingreso a UCI" help="Fecha de ingreso a UCI" placeholder="Fecha de ingreso" widget='date' ></field>
            </group>
          </group>

          <group colspan="4">
            <field name="datos_paciente" string='Datos generales del paciente' help="Datos generales del paciente actual" placeholder="Datos generales del paciente"></field>
          </group>

          <group colspan="4">
            <group>
              <field name="diagnostico_uci" string="Diagnóstico de ingreso a UCI" help="Diagnóstico de ingreso a UCI" placeholder="Diagnóstico de ingreso a UCI"></field>
            </group>

            <group>
              <field name="examen_fisico_uci" string="Examen físico de ingreso a UCI" help="Examen físico de ingreso a UCI" placeholder="Examen físico"></field>
            </group>
          </group>

          <group colspan="4">
              <field name="evaluacion_general" string="Evaluación de ingreso" help="Evaluación general de ingreso a UCI" placeholder="Evaluación"></field>
          </group>

          <notebook>
          
              <page string="Resumen de ingreso">
                  <field name="resumen_ingreso" string='Resumen general de ingreso' placeholder="Resumen"></field>
              </page>

              <page string="Antecedentes">
                  <field name="antecedentes" string='Antecedentes del paciente' help="Antecedentes" placeholder="Antecedentes del paciente"></field>
              </page>

              <page string="Tiempos de estadía">
                <group colspan="4">
                  <field name="estadia_hospitalaria" placeholder="Estadía total en el SAHUAPA" widget="float_time"></field>
                </group>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
  <record id="admision_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <tree decoration-warning="estadia_hospitalaria>=15">
            <field name="usuario_id"></field>
            <field name="datos_paciente"></field>
            <field name="fecha_ingreso_uci"></field>
            <field name="estadia_hospitalaria"></field>
      </tree>
    </field>
  </record>
  
   <!-- Graph view -->
  <record id="admision_graph_view" model="ir.ui.view">
    <field name="name">Vista Graph</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <graph type="bar"> <!--pie, line, bar -->
        <field name="estadia_hospitalaria" type="measure"></field>
      </graph>
    </field>
  </record>

   <!-- Pivot view -->
  <record id="admision_graph_view" model="ir.ui.view">
    <field name="name">Vista Pivot</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <pivot>
        <field name="estadia_hospitalaria" type="measure"></field>
        <field name="fecha_ingreso_uci"></field>
      </pivot>
    </field>
  </record>

  <!-- actions opening views on models -->
  
  <!-- Menú -->
  <menuitem id="admision_menu_root" 
    name="Pacientes" 
    sequence="1"
    web_icon="admision,static/description/icon.png"
    ></menuitem>

  <menuitem id="admision_menu_category" name="Admisión" sequence="1" parent="admision_menu_root"></menuitem>
  
  <menuitem id="action_admision_menu" name="Nuevo" sequence="1" parent="admision_menu_root" action="accion_admision"></menuitem> 
  
  <menuitem name="Configuración" id="menu_config" parent="admision_menu_root"></menuitem>
  
  <menuitem name="Pacientes" id="pacientes_menu" parent="menu_config" action="action_admision_pacientes"></menuitem>
  
  <menuitem name="Historias" id="historias_menu" parent="menu_config" action="action_admision_historia"></menuitem>

  <menuitem name="Familiar encargado" id="familiar_menu" parent="menu_config" action="action_admision_familiar"></menuitem>

  <menuitem name="Examenes físicos" id="examenes_menu" parent="menu_config" action="action_admision_examenfisico"></menuitem>

  <menuitem name="Evaluaciones de ingreso" id="evaluaciones_menu" parent="menu_config" action="action_admision_evaluacion"></menuitem>

  <menuitem name="Diagnósticos de ingreso" id="diagnosticos_menu" parent="menu_config" action="action_admision_diagnostico"></menuitem>
  <!--Fin del menú -->

</odoo>
