<?xml version="1.0" encoding="utf-8"?>

<!-- CADA ID ES UNICO Y SIEMPRE EN MINUSCULA-->
<odoo>
  <!-- Form view -->
  <record id="admision_form_view" model="ir.ui.view">
    <field name="name">admision.admision.form.view</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <form string="Admisión">
        <sheet>
            <field name="foto" widget="image"></field>
            
            <group string="Control de ingreso de pacientes" col="4" colspan="2">
              <group string="Fecha de admisión" col="4" colspan="2">
                <field name="fecha_ingreso_uci" string="Fecha de ingreso a UCI"></field>
              </group>
              <group string="Datos del paciente" col="4" colspan="2">
                <field name="datos_paciente"  string='Datos del paciente'></field>
              </group>
            </group>

            <group col="4" colspan="2">

              <group string="Examen físico" col="2" colspan="2">
                <field name="examen_fisico_uci" string="Examen físico de ingreso a UCI"></field>
              </group>
           
              <group string="Evaluación general de admisión" col="2" colspan="2">
                <field name="evaluacion_general" string="Evaluación general de ingreso"></field>
              </group>
            </group>

            
            <group string="Resumen de ingreso" col="2" colspan="2">
              <field name="resumen_ingreso" string='Resumen general de ingreso'></field>
            </group>
           
              
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="admision_tree_view" model="ir.ui.view">
    <field name="name">admision.admision.form.view</field>
    <field name="model">admision.admision</field>
    <field name="arch" type="xml">
      <tree limit="10">
            <field name="fecha_ingreso_uci"></field>
            <field name="datos_paciente"></field>
      </tree>
    </field>
  </record>
  
  <!-- actions opening views on models -->
  <record id="action_apache" model="ir.actions.act_window">
    <field name="name">Control de admisión</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.admision</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menú -->
  <menuitem id="admision_menu_root" name="Pacientes" sequence="1"></menuitem>
  <menuitem id="admision_menu_category" name="Admisión" sequence="1" parent="admision_menu_root"></menuitem>
  <menuitem id="action_apache_menu" name="Nuevo ingreso" sequence="1" parent="admision_menu_root" action="action_apache"></menuitem>

  <!-- Acciones de ventana -->
</odoo>
