<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_admision_examenfisico" model="ir.actions.act_window">
    <field name="name">Examenes Físicos</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.examenfisico</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para realizar el Examen Físico al paciente
          </p>
    </field>
  </record>

  <!-- Form view -->
  <record id="admision_examenfisico_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">admision.examenfisico</field>
    <field name="arch" type="xml">
      <form string="Idea form">
        <sheet>
          <group>
           <field name="resumen" help="Resumen del examen físico"></field>
           <field name="piel" help="Examen de Piel"></field>
           <field name="cardiopulmonar" help="Examen cardiopulmonar"></field>
           <field name="abdomen" help="Examen abdominal"></field>
           <field name="neurologico" help="Examen Neurológico"></field>
           <field name="urogenital" help="Examen Urogenital"></field>
           <field name="extremidades" help="Examen de las Extremidades"></field>
           <field name="cabeza" help="Examen de la cabeza"></field>
           <field name="oidos" help="Examen de oidos"></field>
           <field name="boca" help="Examen de la Boca"></field>
           <field name="ojos" help="Examen de los ojos"></field>
           <field name="genitales" help="Examen de los Genitales"></field>
           <field name="gases_arteriales" help="Examen de los Gases Arteriales"></field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="admision_examenfisico_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">admision.examenfisico</field>
    <field name="arch" type="xml">
      <tree limit="10">
        <field name="resumen"></field>
      </tree>
    </field>
  </record>
   <!-- Menú -->
  <menuitem name="Examenes físicos" id="examenes_menu" parent="menu_config" action="action_admision_examenfisico"></menuitem>

</odoo>
