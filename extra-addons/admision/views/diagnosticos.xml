<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_admision_diagnostico" model="ir.actions.act_window">
    <field name="name">Diagnósticos</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">admision.diagnostico</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para añadir un nuevo Diagnóstico
          </p>
    </field>
  </record>

  <!-- Form view -->
  <record id="admision_diagnostico_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">admision.diagnostico</field>
    <field name="arch" type="xml">
      <form string="Idea form">
        <sheet>
          <group string="Resumen Diagnóstico">
            <field name="resumen"></field>
          </group>
          <group string="Descripción del Diagnóstico">
            <field name="descripcion"></field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="admision_diagnostico_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">admision.diagnostico</field>
    <field name="arch" type="xml">
      <tree limit="10">
          <field name="descripcion"></field>
      </tree>
    </field>
  </record>
</odoo>
