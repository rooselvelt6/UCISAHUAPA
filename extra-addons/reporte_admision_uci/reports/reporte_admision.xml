<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<report 
		id="accion_admision_admision_report" 
		string="Reporte de admision" 
		model="admision.admision" 
		report_type="qweb-html" 
		name="reporte_admision_uci.reporte_admision">
	</report>

	<template id="reporte_admision">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<h1>Reporte de ingreso a UCI</h1>

						<div class="row">
							<div class="span6">
								<h2>Datos del paciente</h2>
								<p>Número de la Historia Clínica: <span t-field="o.datos_paciente.historia_id"></span></p>
								<p>Nombre completo: <span t-field="o.datos_paciente"></span></p>
								<p>Cédula de identidad: <span t-field="o.datos_paciente.ci"></span></p>
								<p>Fecha de nacimiento: <span t-field="o.datos_paciente.fecha_nacimiento"></span></p>
								<p>Sexo :<span t-field="o.datos_paciente.sexo"></span></p>
								<p>Edad: <span t-field="o.datos_paciente.edad"></span></p>
								<p>Color de piel: <span t-field="o.datos_paciente.color_piel"></span></p>
								<p>Lugar de nacimiento: <span t-field="o.datos_paciente.lugar_nacimiento"></span></p>
								<p>País: <span t-field="o.datos_paciente.pais_id"></span></p>
								<p>Estado: <span t-field="o.datos_paciente.estado_id"></span></p>
								<p>Ciudad: <span t-field="o.datos_paciente.ciudad"></span></p>
								<p>Fecha de ingreso al HUAPA: <span t-field="o.datos_paciente.fecha_ingreso_hospital"></span></p>
								<p>Fecha de ingreso a la UCI: <span t-field="o.fecha_ingreso_uci"></span></p>
								<p>Estadía hospitalaría general: <span t-field="o.estadia_hospitalaria"></span> días</p>
							
							</div>
						</div>

						<div class="row">
							<div class="span6">
								<h2>Diagnóstico de ingreso al HUAPA</h2>
								<p>Resumen: <span t-field="o.datos_paciente.diagnostico_id.resumen"></span></p>
								<p>Descripción general: <span t-field="o.datos_paciente.diagnostico_id.descripcion"></span></p>
							</div>
						</div>

						<div class="row">
							<div class="span6">
								<h2>Diagnóstico de ingreso a UCI</h2>
								<p>Resumen: <span t-field="o.diagnostico_uci.resumen"></span></p>
								<p>Descripción general: <span t-field="o.diagnostico_uci.descripcion"></span></p>
							</div>
						</div>
						
						<div class="row">
							<div class="span6">
								<h2>Examen de ingreso al HUAPA</h2>
								<p>Resumen: <span t-field="o.datos_paciente.examen_id.resumen"></span></p>
								<p>Piel: <span t-field="o.datos_paciente.examen_id.piel"></span></p>
								<p>Cardiopulmonar: <span t-field="o.datos_paciente.examen_id.cardiopulmonar"></span></p>
								<p>Abdomen: <span t-field="o.datos_paciente.examen_id.abdomen"></span></p>
								<p>Neurológico: <span t-field="o.datos_paciente.examen_id.neurologico"></span></p>
								<p>Urogenital: <span t-field="o.datos_paciente.examen_id.urogenital"></span></p>
								<p>Extremidades: <span t-field="o.datos_paciente.examen_id.extremidades"></span></p>
								<p>Cabeza: <span t-field="o.datos_paciente.examen_id.cabeza"></span></p>
								<p>Genitales: <span t-field="o.datos_paciente.examen_id.genitales"></span></p>
								<p>Oidos: <span t-field="o.datos_paciente.examen_id.oidos"></span></p>
								<p>Gases arteriales: <span t-field="o.datos_paciente.examen_id.gases_arteriales"></span></p>
								<p>Boca: <span t-field="o.datos_paciente.examen_id.boca"></span></p>
								<p>Ojos: <span t-field="o.datos_paciente.examen_id.ojos"></span></p>

							</div>
						</div>

						<div class="row">
							<div class="span6">
								<h2>Examen de ingreso a UCI</h2>
								<p>Resumen: <span t-field="o.examen_fisico_uci.resumen"></span></p>
								<p>Piel: <span t-field="o.examen_fisico_uci.piel"></span></p>
								<p>Cardiopulmonar: <span t-field="o.examen_fisico_uci.cardiopulmonar"></span></p>
								<p>Abdomen: <span t-field="o.examen_fisico_uci.abdomen"></span></p>
								<p>Neurológico: <span t-field="o.examen_fisico_uci.neurologico"></span></p>
								<p>Urogenital: <span t-field="o.examen_fisico_uci.urogenital"></span></p>
								<p>Extremidades: <span t-field="o.examen_fisico_uci.extremidades"></span></p>
								<p>Cabeza: <span t-field="o.examen_fisico_uci.cabeza"></span></p>
								<p>Genitales: <span t-field="o.examen_fisico_uci.genitales"></span></p>
								<p>Oidos: <span t-field="o.examen_fisico_uci.oidos"></span></p>
								<p>Gases arteriales: <span t-field="o.examen_fisico_uci.gases_arteriales"></span></p>
								<p>Boca: <span t-field="o.examen_fisico_uci.boca"></span></p>
								<p>Ojos: <span t-field="o.examen_fisico_uci.ojos"></span></p>

							</div>
						</div>

					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>