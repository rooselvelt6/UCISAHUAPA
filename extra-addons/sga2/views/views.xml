<?xml version="1.0" encoding="utf-8"?>

<!-- CADA ID ES UNICO Y SIEMPRE EN MINUSCULA-->
<odoo>

  
  <record id="action_apache" model="ir.actions.act_window">
    <field name="name">Fisiología aguda y evaluación de salud crónica II</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">apache.apache</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click para realizar un nuevo cálculo de gravedad (APACHE II).
          </p>
    </field>
  </record>


  <!-- Form view -->
  <record id="apache_form_view" model="ir.ui.view">
    <field name="name">Vista Form</field>
    <field name="model">apache.apache</field>
    <field name="arch" type="xml">
      <form string="APACHE_II">

        <header>
          <field name="state" invisible="True"></field>
          <button string="Generar valores" name="controlados" type="object" attrs="{'invisible':[('state','in',['draft'])]}" class="oe_highlight"></button>
          <button string="Obtener resultados" name="calcular" type="object"></button>
          
        </header>


        <sheet>
          <!-- Datos del paciente 2c -->
          <group col="6" colspan="2" string="Resultados">
              
              <group col="2" colspan="2">
        
                <field name="aps" help="Sumatoria de todas las variables fisiológicas del paciente" widget="gauge" style="width:120px;height:90px;cursor:pointer;"/>
               </group>

              <group col="2" colspan="2">
            
                 <field name="apache" help="Estado de gravedad del paciente" widget="gauge" style="width:120px;height:90px;cursor:pointer;"/>
              </group>

              <group col="2" colspan="2">
              
                <field name="mortalidad" help="Estimación del porcentaje de mortalidad" widget="gauge" style="width:120px;height:90px;cursor:pointer;"/>
              </group>
          </group>

          
          <group name="contenedor" col="6" colspan="2">

            <group string="Datos del paciente" col="2" colspan="2">
            <field name="fecha_actual" string="Fecha"></field>
            <field name="edad" string="Edad del paciente"></field>
            <field name="enfermedades" help="documentacion"></field>
          </group>

            <!-- Controles fisiológicos 2c--> 
            <group string="Variables Fisiológicas" col="2" colspan="2" >
              <field string="Temperatura" name="temperatura" placeholder="Temperatura" help="Temperatura rectal (Axial +0.5°C)"></field>
              <field name="pam" help="Presión arterial media (mmHg)" placeholder="Presión arterial media (PAM)"></field>
              <field name="fc" help="Frecuencia cardíaca (Respuesta ventricular)"></field>
              <field name="fr" help="Frecuencia respiratoria (No ventilado o ventilado)"></field>
              <field name="ph" help="pH arterial (Preferido)"></field>
              <field name="hco3" help="HCO3 Sérico(Venoso mEq/l)"></field>
              <field name="na" help="Sodio Sérico (mEq/l)"></field>
              <field name="k" help="Potasio Sérico (mEq/l)"></field>
              <field name="creatinina" help="Creatinina sérica (mg/dl)"></field>
              <field name="fallo_renal" help="¿El paciente tiene fallas renales?"></field>
              <field name="hematocrito" help="Hematocrito (%)"></field>
              <field name="leucocitos" help="Leucocitos (Total/mm3 en miles)"></field>
              <field name="fio2" help="Oxigenación FIO2"></field>
              <field name="oxigenacion" help="Valor actual de Oxigenación"></field>
            </group>
            <!-- Glasgow 2c--> 
            <group string="Escala de coma de Glasgow" col="2" colspan="2">
              <field name="apertura_ocular" help='Apertura ocular.'></field>
              <field name="respuesta_motora" help='Respuesta motora.'></field>
              <field name="respuesta_verbal" help='Respuesta verbal.'></field>
            </group>
              <!-- REsultados--> 
          </group>
          

        </sheet>
      </form>
    </field>
  </record>

   <!-- Tree view -->
   <record id="apache_tree_view" model="ir.ui.view">
    <field name="name">Vista Tree</field>
    <field name="model">apache.apache</field>
    <field name="arch" type="xml">
      <tree limit="30">
            <field name="fecha_actual"></field>
            <field name="aps"></field>
            <field name="apache"></field>
            <field name="mortalidad"></field>
      </tree>
    </field>
  </record>
  
  <!-- Search views -->
  <record id="views_filter_apache" model="ir.ui.view">
    <field name="name">Vista Search</field>
    <field name="model">apache.apache</field>
    <field name="arch" type="xml">
      <search>
        <field name="aps"></field>
        <field name="apache"></field>
        <field name="mortalidad"></field>
        <filter string="Pacientes con fallas renales" domain="[('fallo_renal','=',True)]"></filter>
        <filter string="Pacientes sin fallas renales" domain="[('fallo_renal','=',False)]"></filter>
      </search>
    </field>
  </record>
 
 

  <!-- Menú -->
  <menuitem 
    id="apache_menu_root" 
    name="Apache II" 
    sequence="1"
    web_icon="sga2,static/description/icon.png"></menuitem>
  <menuitem id="apache_menu_category" name="Nuevo" sequence="1" parent="apache_menu_root"></menuitem>
 <!-- <menuitem id="action_apache_menu" name="Documentación" sequence="1" parent="apache_menu_category" action="action_apache"></menuitem>

   Acciones de ventana -->
</odoo>
